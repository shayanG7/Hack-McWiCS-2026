{
  "name": "Post",
  "type": "object",
  "properties": {
    "content": {
      "type": "string",
      "description": "The post content"
    },
    "group_id": {
      "type": "string",
      "description": "ID of the group this post belongs to"
    },
    "author_name": {
      "type": "string",
      "description": "Display name of the author"
    },
    "author_email": {
      "type": "string",
      "description": "Email of the author"
    },
    "reactions": {
      "type": "object",
      "description": "Reactions object with emoji keys and array of user emails as values",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    }
  },
  "required": [
    "content",
    "group_id"
  ]
}